<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@drawable/titae_gradient_soft"
    android:layout_gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/bank_name_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ㅁ은행"
            android:textColor="#aa000000"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/product_name_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ㅇ상품"
            android:textColor="#aa000000"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/interest_rate_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00%"
            android:textColor="#aa000000"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/received_amount_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="실수령액"
            android:textColor="#aa000000"
            android:textSize="20dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/received_amount_result_compare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#aa000000"
            android:textSize="18dp"
            android:layout_weight="2"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>